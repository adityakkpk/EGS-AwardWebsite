generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Nomination {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName        String
  designation     String
  organization    String
  industry        String
  country         String
  email           String
  phone           String
  category        String
  achievements    String
  contributions   String
  awards          String?
  supportingDocs  String?
  createdAt       DateTime @default(now())
}
